<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#1565C0"
        card_view:cardElevation="8dp"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_list_item"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="centerCrop" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/name_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lines="2"
                android:textStyle="bold|italic"
                android:text="hello"
                android:textColor="#ffffff"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_list_item"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center"
                    android:text="Price:- â‚¹"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pr_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/sub_button"
                    android:background="@drawable/button_shape"
                    android:text="-"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    />
                <TextView
                    android:id="@+id/qty_edit_text"
                    android:textAlignment="center"
                    android:layout_width="50dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="0"/>
                <Button
                    android:id="@+id/add_button"
                    android:background="@drawable/button_shape"
                    android:text="+"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    />
            </LinearLayout>
            <Button
                android:layout_marginTop="5dp"
                android:id="@+id/btn"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:drawableBottom="@drawable/ic_add_shopping_cart_black_24dp"
                android:background="@drawable/button_shape"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>