<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/back_blur1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.cafeteriaapp.SignUpActivity">
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/design"
            android:text="S Q U A R E   O N E"
            android:textColor="#ffffff"
            android:textAlignment="center"/>
        <ImageView
            android:src="@drawable/square"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            style="@style/design"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textAlignment="center"/>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="#ffffff"
            android:textAlignment="gravity"
            style="@style/design"
            android:id="@+id/card_input_signup">
            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/design"
                android:textColor="#D50000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/card_input_edit_signup"
                android:hint="Card Number"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/design"
            android:textColorHint="#ffffff"
            android:textAlignment="gravity"
            android:id="@+id/password_input_signup">
            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/design"
                android:textColor="#D50000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/password_input_edit_signup"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="#ffffff"
            android:textAlignment="gravity"
            style="@style/design"
            android:id="@+id/confirm_password_input_signup">
            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/design"
                android:textColor="#D50000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/confirm_password_input_edit_signup"
                android:hint="Confirm Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="#ffffff"
            android:textAlignment="gravity"
            style="@style/design"
            android:id="@+id/email_input_signup">
            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/design"
                android:textColor="#D50000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/email_input_edit_signup"
                android:hint="Email"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/design"
            android:textColorHint="#ffffff"
            android:textAlignment="gravity"
            android:id="@+id/card_name_input_signup">
            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/design"
                android:textColor="#D50000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/card_name_input_edit_signup"
                android:hint="Card Name"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:textColorHint="#ffffff"
            android:textAlignment="gravity"
            style="@style/design"
            android:id="@+id/phone_input_signup">
            <android.support.design.widget.TextInputEditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/design"
                android:textColor="#D50000"
                android:layout_gravity="center_horizontal"
                android:id="@+id/phone_input_edit_signup"
                android:maxLength="10"
                android:hint="Phone"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/signup_btn_signup"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:text="Sign Up!"
                android:textColor="#D50000"
                android:background="@drawable/buttonshape"/>
    </LinearLayout>
</ScrollView>
